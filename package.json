{
  "name": "@damlys/ts-project-skeleton",
  "version": "0.0.8",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "TypeScript project skeleton for Node.js projects.",
  "keywords": [],
  "author": "Damian Łysiak",
  "contributors": [],
  "license": "UNLICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/damlys/ts-project-skeleton.git"
  },
  "bugs": {
    "url": "https://github.com/damlys/ts-project-skeleton/issues"
  },
  "files": [
    "dist",
    "docs"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ts-project-skeleton": "dist/bin/main.js"
  },
  "engines": {
    "node": ">=14.0.0 <15",
    "npm": ">=6.14.4"
  },
  "dependencies": {},
  "devDependencies": {
    "@damlys/dockerfile": "~0.5.1",
    "@damlys/ts-sdk": "^1.0.1",
    "@types/node-fetch": "^2.5.8",
    "node-fetch": "^2.6.1"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "src:exec": "ts-node ./src/bin/main.ts run-http-server",
    "src:repl": "ts-node-dev ./src/bin/main.ts run-http-server",
    "dist:exec": "node ./dist/bin/main.js run-http-server",
    "dist:repl": "nodemon ./dist/bin/main.js run-http-server",
    "dist:debug": "node --inspect='0.0.0.0:9229' ./dist/bin/main.js run-http-server",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint './**/*.{ts,tsx}' --fix",
    "lint:check": "eslint './**/*.{ts,tsx}'",
    "test": "jest --verbose",
    "test:coverage": "rm -rf ./coverage && jest --coverage",
    "test:watch": "jest --watchAll",
    "test:unit": "jest ./tests/unit",
    "test:e2e": "jest ./tests/e2e",
    "docker:build": "dockerfile compose | docker-compose --file - build",
    "docker:audit": "docker scan \"$(dockerfile image)\"",
    "docker:up": "IMAGE=\"$(dockerfile image)\" docker-compose up --detach",
    "docker:down": "docker-compose down --remove-orphans --volumes",
    "docker:publish": "docker push \"$(dockerfile image)\"",
    "docker:pull": "docker pull \"$(dockerfile image)\"",
    "version": "add-keepachangelog-header ./CHANGELOG.md && git add ./CHANGELOG.md"
  },
  "dockerfile": {
    "build": {
      "context": ".",
      "dockerfile": "Dockerfile",
      "args": [
        "NPM_TOKEN"
      ]
    }
  }
}
